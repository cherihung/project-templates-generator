{
  "name": "project-generator-cli",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "start:watch": "tsc-watch -p src/tsconfig.json --onSuccess 'yarn start'",
    "build:cli": "tsc --project src/tsconfig.json",
    "clean": "rm -rf dist",
    "copy:templates": "rsync -ax --exclude 'node_modules' templates dist",
    "build": "yarn clean && yarn build:cli && yarn copy:templates",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts"
  },
  "bin": {
    "generate": "./dist/index.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "mock-fs": "^5.1.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "colors": "1.4.0",
    "inquirer": "^8.2.0"
  }
}